<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="PosScrapOrdersScreen" owl="1">
        <div class="pos-screen">

            <div class="screen-header">
                <h2>POS Scrap Orders</h2>
                <button class="button btn btn-secondary"
                        t-on-click="back">Back</button>
            </div>

            <table class="table table-sm mt16">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Date</th>
                        <th>State</th>
                        <th>Location</th>
                    </tr>
                </thead>

                <tbody>
                    <t t-foreach="state.scraps" t-as="scrap" t-key="scrap.id">
                        <tr t-on-click="() => openBackend(scrap)" style="cursor:pointer;">
                            <td><t t-esc="scrap.name"/></td>
                            <td><t t-esc="scrap.product_id[1]"/></td>
                            <td><t t-esc="scrap.scrap_qty"/></td>

                            
                            <td><t t-esc="scrap.date_done_local or '-'"/></td>

                            <td><t t-esc="scrap.state"/></td>
                            <td><t t-esc="scrap.location_id[1]"/></td>
                        </tr>
                    </t>
                </tbody>

            </table>

        </div>
    </t>

</templates>
